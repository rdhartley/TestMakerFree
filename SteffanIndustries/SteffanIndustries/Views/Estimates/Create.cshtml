@model SteffanIndustries.Models.Estimate

@{

}


<h2 class="h2">@ViewBag.Title</h2>

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Estimate</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EstimateDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EstimateDate" class="form-control" />
                <span asp-validation-for="EstimateDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Contact" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Contact" class="form-control" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="JobName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="JobName" class="form-control" />
                <span asp-validation-for="JobName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Scope" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Scope" class="form-control" />
                <span asp-validation-for="Scope" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
             </div>
        </div>
    </div>

</form>

@section Scripts {
    <script language="javascript" type="text/javascript">
        //Date Picker
        $(function () {
            $('#EstimateDate').datepicker({
                dateFormat: 'mm-dd-yy'
                });
            });
    </script>
}
